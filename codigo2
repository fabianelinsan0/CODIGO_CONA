#include <iostream>

int main() {
    int numero;

    do {
        std::cout << "Ingrese un número: ";
        std::cin >> numero;
        
        if (numero > 0) {
            std::cout << "El número " << numero << " es positivo." << std::endl;
        } else if (numero < 0) {
            std::cout << "El número " << numero << " es negativo." << std::endl;
        } else {
            std::cout << "El número es cero." << std::endl;
        }
    } while (numero != 0);

    return 0;
}
